<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#44CCCCCC"/>
            <stroke android:color="#FFFFFF"
            android:width="2dp"/>
            <padding android:top="@dimen/circle_button_padding"
                     android:left="@dimen/circle_button_padding"
                     android:right="@dimen/circle_button_padding"
                     android:bottom="@dimen/circle_button_padding"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#44666666"/>
            <stroke android:color="#FFFFFF"
                    android:width="2dp"/>
            <padding android:top="@dimen/circle_button_padding"
                     android:left="@dimen/circle_button_padding"
                     android:right="@dimen/circle_button_padding"
                     android:bottom="@dimen/circle_button_padding"/>
        </shape>
    </item>
</selector>