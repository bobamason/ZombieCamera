        <shape android:shape="oval">
            <solid android:color="@color/record_button_pressed"/>
            <padding android:top="@dimen/custom_button_padding"
                     android:left="@dimen/custom_button_padding"
                     android:right="@dimen/custom_button_padding"
                     android:bottom="@dimen/custom_button_padding"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding android:top="@dimen/custom_button_padding"
                     android:left="@dimen/custom_button_padding"
                     android:right="@dimen/custom_button_padding"
                     android:bottom="@dimen/custom_button_padding"/>
            <solid android:color="@color/record_button_normal"/>
        </shape>
    </item>
</selector>