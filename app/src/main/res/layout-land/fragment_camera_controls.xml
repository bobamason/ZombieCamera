<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="@dimen/controls_layout_size"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/control_background"
                                                   tools:context=".ar.CameraControlsFragment">
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline5" app:layout_constraintGuide_percent=".5"/>

    <ImageButton
            android:src="@drawable/ic_camera_btn"
            android:layout_width="@dimen/camera_button_size"
            android:layout_height="@dimen/camera_button_size"
            android:id="@+id/cameraButton"
            android:background="@drawable/ic_camera_btn_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
    />

    <ImageButton
            android:src="@drawable/ic_record_24dp"
            android:layout_width="@dimen/camera_button_size"
            android:layout_height="@dimen/camera_button_size"
            android:id="@+id/recordButton"
            android:visibility="gone"
            android:background="@drawable/ic_record_btn_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
    />

    <ImageButton
            android:src="@drawable/ic_photo_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/circle_button_padding"
            android:id="@+id/videoToggleButton"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/toggle_photo_and_video"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            android:layout_marginBottom="@dimen/center_guide_margin"/>
    <ImageButton
            android:src="@drawable/ic_settings_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/circle_button_padding"
            android:id="@+id/settingsButton"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/center_guide_margin"
            app:layout_constraintTop_toBottomOf="@+id/guideline5"/>

    <ImageView
            android:layout_width="@dimen/camera_button_size"
            android:layout_height="@dimen/camera_button_size"
            android:id="@+id/thumbnailButton"
            android:visibility="gone"
            android:focusable="true"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>