material {
    name : "camera shader",
    parameters : [
            {
               type : samplerExternal,
               name : exTexture
            },
            {
               type : sampler2d,
               name : lut
            }
        ],
        requires : [
            uv0
        ],
    shadingModel : unlit,
    blending : opaque
}
fragment {

    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        float3 c = texture(materialParams_exTexture, getUV0()).rgb;
        material.baseColor.rgb = luminance(c) * float3( 0.1, 0.8, 0.3 );
        material.baseColor.a = 1.0;
    }
}
